{
  "name": "workflow-orchestration-build",
  "image": "ghcr.io/intel-agency/workflow-orchestration/devcontainer:main-latest",
  "containerEnv": {
    "DOTNET_ROOT": "/usr/share/dotnet",
  },
  "onCreateCommand": "npm install -g @modelcontextprotocol/server-sequential-thinking @modelcontextprotocol/server-memory && cd .opencode && npm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "ms-python.python",
        "oven.bun-vscode",
        "avaloniateam.vscode-avalonia",
      ],
    },
  },
  "remoteUser": "vscode",
}
