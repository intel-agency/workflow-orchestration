{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "zai-coding-plan": {
      "models": {
        "glm-5": {
          "name": "GLM-5",
          "limit": {
            "context": 200000,
            "output": 131072
          }
        }
      }
    }
  },
  "model": "zai-coding-plan/glm-5",
  "mcp": {
    "sequential-thinking": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-sequential-thinking"]
    },
    "memory": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"]
    }
  }
}
